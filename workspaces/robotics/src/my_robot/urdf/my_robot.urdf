<?xml version="1.0"?>
<robot name="my_robot">
    <!-- Base Link -->
    <link name="base">
        <visual>
            <geometry>
                <box size="1 1 0.5" />
            </geometry>
            <material name="gray">
                <color rgba="0.5 0.5 0.5 1" />
            </material>
        </visual>
    </link>

    <!-- Pendulum Joint -->
    <joint name="pendulum_joint" type="revolute">
        <parent link="base"/>
        <child link="rod"/>
        <origin xyz="0 0 0.25" rpy="0 0 0"/> <!-- Positioned at the top middle of the box -->
        <axis xyz="0 1 0"/> <!-- Swing along the Y axis -->
        <limit lower="-3.14159" upper="3.14159" effort="1000" velocity="1"/>
    </joint>

    <!-- Rod Link -->
    <link name="rod">
        <visual>
            <geometry>
                <cylinder radius="0.1" length="2.0" />
            </geometry>
            <material name="red">
				<color rgba="1 0 0 1"/>
			</material>
        </visual>
        <inertial>
            <mass value="1.0"/>
            <origin xyz="0 0 -1.0" rpy="0 0 0"/> <!-- Adjust the center of mass to the middle of the rod -->
            <inertia ixx="0.1" ixy="0" ixz="0" iyy="0.1" iyz="0" izz="0.1"/>
        </inertial>
    </link>
</robot>
