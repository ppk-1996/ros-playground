{
    "name": "ROS Development Container",
    "dockerComposeFile": "../docker-compose.yaml",
    "service": "ros-dev",
    "workspaceFolder": "/home/developer/ros-playground",
    "customizations": {
        "vscode": {
            "settings": {
                "terminal.integrated.shell.linux": "/bin/zsh"
            },
            "extensions": [
                "smilerobotics.urdf",
                "sweilz.ros-snippets",
                "ms-iot.vscode-ros",
                "ms-python.python"
            ]
        }
    },
    "remoteEnv": {
        "DISPLAY": "${localEnv:DISPLAY}",
        "TERM": "xterm-256color"
    },
    "containerEnv": {
        "DISPLAY": "unix${localEnv:DISPLAY}",
        "TERM": "xterm-256color"
    }
}
